                <view class='sp2'>
                    <input type="text" value='' placeholder='请输入联系电话'></input>
                </view>
            </view>

            <view class='p p2' style='margin-bottom:0px;'>
                <view class='span sp1'>营业时间</view>
                <view class='sp2'>
                    <view class='i'>08:00-17:00</view>
                </view>
            </view>

        </view>
