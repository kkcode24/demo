        </view>
    </view>

    <view class='wrap fbxx_01'>
        <view class='wrap_c'>
            <view class='p p6'>
                <view class='span sp1'>商家服务</view>
                <view class='span sp2'>
                    <radio-group>
                        <view class='lb'><radio></radio><view class='i'>wifi</view></view>
                        <view class='lb'><radio></radio><view class='i'>充电</view></view>
                        <view class='lb'><radio></radio><view class='i'>雨伞</view></view>
                        <view class='lb'><radio></radio><view class='i'>洗手间</view></view>
                        <view class='lb'><radio></radio><view class='i'>名称</view></view>
                    </radio-group>
                </view>
            </view>
        </view>
    </view>

    <view class='wrap fbxx_02'>
        <view class='wrap_c'>
            <view class='fbxx_02_t'>
                <view class='fl'>商家封面</view>
                <view class='fr'>0/1</view>
            </view>
            <view class='fbxx_02_c' style='border-bottom:1rpx solid #eee;'>
                <view class='li'>
                    <image src='https://www.chengshishe.com/club/static/upimg/mjzy_02.jpg' mode='widthFix'></image>
                    <view class='close'></view>
                </view>
            </view>
        </view>
    </view>

    <view class='wrap fbxx_02'>
        <view class='wrap_c'>
            <view class='fbxx_02_t'>
                <view class='fl'>营业执照</view>
                <view class='fr'>请拍全再上传  0/1</view>
            </view>
            <view class='fbxx_02_c' style='border-bottom:1rpx solid #eee;'>
                <view class='li'>
                  <image src='https://www.chengshishe.com/club/static/upimg/mjzy_03.jpg' mode='widthFix'></image>
                  <view class='close'></view>
                </view>
            </view>
        </view>
    </view>

    <view class='wrap fbxx_01'>
        <view class='wrap_c'>
            <view class='p p7'>
                <view class='span sp1'>认证费用</view>
                <view class='span sp2'>
                    <view class='fl'><view class='i'>199元</view>/年</view>
                    <view class='fr'>
                      <radio-group>
                          <radio></radio>
                      </radio-group>
                    </view>
                </view>
            </view>
        </view>
    </view>


    <view class='wrap fbxx_03' style='margin-bottom:20rpx;'>
        <view class='wrap_c'>
            <view class='p p3'>
                <button class='fbxx_btn' hover-class='none'>确定</button>
            </view>
        </view>
    </view>













