        <view class='wrap_c'>
            <view class='fl top_return'>
                <view class='re_page' bindtap='repage_click'>发布卡券</view>
            </view>
        </view>
    </view>
    <!--end 头部-->

    <view class='wrap fbxx_01 fbxj_01'>
        <view class='wrap_c'>
            <view class='p p2'>
                <view class='span sp1'>卡券选择</view>
                <view class='sp2'>
                    <view class='i'>代金券</view>
                </view>
            </view>
            <view class='p p3' style='margin-bottom:0px;'>
                <view class='span sp1'>折扣金额</view>
                <view class='sp2'>
                    <input type="text" class='txt2' value='' placeholder='优惠金额'></input>
                    <view class='i_tip'>元</view>
