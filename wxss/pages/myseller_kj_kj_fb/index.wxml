            <view class='p'>
                <textarea placeholder='请输入卡券使用说明...'></textarea>
            </view>
            <view class='p p1'>0/200</view>

            <view class='p p3' style='margin-bottom:0px;'>
                <view class='span sp1'>全部数量</view>
                <view class='sp2'>
