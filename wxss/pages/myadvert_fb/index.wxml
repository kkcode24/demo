<view class="container">
    <!--头部-->
    <view class='wrap topfr top_red'>
        <view class='wrap_c'>
            <view class='fl top_return'>
                <view class='re_page' bindtap='repage_click'>投放广告</view>
            </view>
        </view>
    </view>
    <!--end 头部-->

    <view class='wrap fbxx_01'>
        <view class='wrap_c'>
            <view class='p p2' style='margin-bottom:0px;'>
                <view class='span sp1'>位置选择</view>
                <view class='sp2'>
                    <view class='i' bindtap='madfbxz_click'>首页banner广告位</view>
                </view>
            </view>
            <view class='p p3' style='margin-bottom:0px;'>
                <view class='span sp1'>位置编号</view>
                <view class='sp2'>
                    <input type="text" value='15'></input>
                </view>
            </view>
            <view class='p p4' style='margin-bottom:0px;'>
                <view class='span sp1'>投放时限</view>
                <view class='sp2'>
                    <view class='i'>半年</view>
                </view>
            </view>
            <view class='p p3' style='margin-bottom:0px;'>
                <view class='span sp1'>广告费用</view>
                <view class='sp2'>
                    <input type="text" class='txt1' value='¥1200'></input>
                </view>
            </view>
            <view class='p p3' style='margin-bottom:0px;'>
                <view class='span sp1'>起始时间</view>
                <view class='sp2'>
                    <input type="text" value='2019-01-28 23:12:34'></input>
                </view>
            </view>
            <view class='p p3' style='margin-bottom:0px;'>
                <view class='span sp1'>结束时间</view>
                <view class='sp2'>
                    <input type="text" value='2019-02-28 23:12:34'></input>
                </view>
            </view>
        </view>
    </view>

    <view class='wrap fbxx_02'>
        <view class='wrap_c'>
            <view class='fbxx_02_t'>
                <view class='fl'>广告图片</view>
                <view class='fr'>1/1</view>
            </view>
            <view class='fbxx_02_c'>
                <view class='li'><image src='https://www.chengshishe.com/club/static/upimg/fbcs_01.jpg' mode='widthFix'></image></view>
            </view>
        </view>
    </view>

    <view class='wrap fbxx_01'>
        <view class='wrap_c'>
            <view class='p p2' style='margin-bottom:0px;'>
                <view class='span sp1'>广告内容</view>
                <view class='sp2'>
                    <view class='i' bindtap='ggnrxz_click'>请选择广告内容</view>
                </view>
            </view>
        </view>
    </view>

    <view class='wrap fbxx_03'>
        <view class='wrap_c'>
            <view class='p p3'>
                <button class='fbxx_btn' hover-class='none'>支付发布</button>
            </view>
        </view>
    </view>










</view>